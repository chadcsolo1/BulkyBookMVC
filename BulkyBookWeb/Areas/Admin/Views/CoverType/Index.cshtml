@model IEnumerable<CoverType>
@{
    ViewData["Title"] = "Index";
}

<h1>Index Cover Type</h1>

<div class="container p-3">
    <div class="row pt-4">
        <h2 class="text-primary">Cover Type List</h2>
    </div>
    <div class="col-13 text-end">
        <a asp-controller="CoverType" asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> &nbsp; Create New Cover Type
        </a>
    </div>
    <br/>
    <br/>

    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Cover Type Name
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var objCoverTypeList in Model)
            {
                <tr>
                    <td width="70%">
                        @objCoverTypeList.Name
                    </td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-controller="CoverType" asp-action="Edit" asp-route-id="@objCoverTypeList.Id"
                               class="btn btn-primary mx-2"> <i class="bi bi-pencil-square"></i> Edit
                           </a>
                           <a asp-controller="CoverType" asp-action="Delete" asp-route-id="@objCoverTypeList.Id" class="btn btn-danger mx-2">
                               <i class="bi bi-trash"></i> Delete
                               </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>